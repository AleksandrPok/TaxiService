<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>taxi.controller.IndexController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>createDriver</servlet-name>
        <servlet-class>taxi.controller.driver.CreateDriver</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createDriver</servlet-name>
        <url-pattern>/driver/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>getAllDrivers</servlet-name>
        <servlet-class>taxi.controller.driver.GetAllDrivers</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getAllDrivers</servlet-name>
        <url-pattern>/driver/all</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>deleteDriver</servlet-name>
        <servlet-class>taxi.controller.driver.DeleteDriver</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteDriver</servlet-name>
        <url-pattern>/driver/delete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>createManufacturer</servlet-name>
        <servlet-class>taxi.controller.manufacturer.CreateManufacturer</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createManufacturer</servlet-name>
        <url-pattern>/manufacturer/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>createCar</servlet-name>
        <servlet-class>taxi.controller.car.CreateCar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createCar</servlet-name>
        <url-pattern>/car/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addDriverToCar</servlet-name>
        <servlet-class>taxi.controller.car.AddDriverToCar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addDriverToCar</servlet-name>
        <url-pattern>/car/drivers/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>deleteCar</servlet-name>
        <servlet-class>taxi.controller.car.DeleteCar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteCar</servlet-name>
        <url-pattern>/car/delete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>getAllCars</servlet-name>
        <servlet-class>taxi.controller.car.GetAllCars</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getAllCars</servlet-name>
        <url-pattern>/car/all</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>getAllManufacturers</servlet-name>
        <servlet-class>taxi.controller.manufacturer.GetAllManufacturers</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getAllManufacturers</servlet-name>
        <url-pattern>/manufacturer/all</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>deleteManufacturer</servlet-name>
        <servlet-class>taxi.controller.manufacturer.DeleteManufacturer</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteManufacturer</servlet-name>
        <url-pattern>/manufacturer/delete</url-pattern>
    </servlet-mapping>
</web-app>
